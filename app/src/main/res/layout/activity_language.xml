<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.LanguageActivity">
    <ImageView
        android:id="@+id/imgTopHeader"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="-10dp"
        android:scaleType="fitXY"
        android:src="@drawable/imgtopheader" />

    <TextView
        android:id="@+id/rashiTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_below="@+id/imgTopHeader"
        android:fontFamily="@font/josefinsans_bold2"
        android:text="@string/select_your_language"
        android:textColor="@color/purple_200"
        android:textSize="18dp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/view"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/rashiTitle"
        android:background="#dbdbdb"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@+id/view"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">




    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:elevation="10dp"
       android:layout_weight="1"
        android:translationZ="0.4dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="5dp"
        app:cardCornerRadius="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/iv"
                android:padding="4dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/lang2"
                android:layout_centerVertical="true"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:id="@+id/txtName"
                android:layout_marginTop="45dp"
                android:layout_below="@+id/iv"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="Hindi"/>



        </RelativeLayout>


    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="170dp"
            android:elevation="10dp"
            android:layout_weight="1"
            android:translationZ="0.4dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="5dp"
            app:cardCornerRadius="6dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:id="@+id/iv_image"
                    android:padding="4dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/lang2"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:id="@+id/txt_name"
                    android:layout_marginTop="45dp"
                    android:layout_below="@+id/iv_image"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="English"/>



            </RelativeLayout>


        </androidx.cardview.widget.CardView>
    </LinearLayout>

</RelativeLayout>