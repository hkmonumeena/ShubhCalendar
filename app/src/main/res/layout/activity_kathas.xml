<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".activities.VidhiActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/imgtopheader">

            <RelativeLayout
                android:id="@+id/rlDismiss"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/back_shape">

                <ImageView
                    android:id="@+id/backbtn"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_baseline_arrow_back_24" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@+id/rlDismiss"
                android:layout_marginLeft="10dp"
                android:visibility="gone"
                android:layout_marginTop="25dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Holidays"
                    android:textColor="#FE8226"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayoutMenu"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/back_shape">


                <ImageView
                    android:id="@+id/icMenu"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="8dp"
                    android:src="@drawable/ic_baseline_menu_24"
                    app:tint="@color/white" />

            </RelativeLayout>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="55dp"
                android:layout_toStartOf="@+id/cardViewProfile"
                android:padding="12dp"
                android:src="@drawable/notification"
                app:tint="@color/white" />


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardViewProfile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/relativeLayoutMenu"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="25dp"
                app:cardElevation="8dp">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="0dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ellipse_6670_ek1" />


            </com.google.android.material.card.MaterialCardView>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:elevation="5dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:background="@drawable/gradient_back_select"
            android:padding="10dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Select Puja"
                android:layout_centerVertical="true"
                android:textColor="#fff"/>

            <Spinner
                android:layout_toRightOf="@+id/iv_visa"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.33">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mantras/Artis"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:fontFamily="@font/josefinsans_regular"
                    android:textColor="@color/black" />
                <View
                    android:layout_width="80dp"
                    android:layout_height="2px"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/gradient_back" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.34">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vidhi/Samagri"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:fontFamily="@font/josefinsans_regular"
                    android:textColor="@color/black" />
                <View
                    android:layout_width="80dp"
                    android:layout_height="2px"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/gradient_back" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_kathas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.33"
                >


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kathas"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:fontFamily="@font/josefinsans_regular"
                    android:textColor="@color/black" />
                <View
                    android:layout_width="80dp"
                    android:layout_height="2px"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/gradient_back" />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/grey" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="25dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FCF9F7"
                android:orientation="vertical">

                <View
                    android:layout_width="80dp"
                    android:layout_height="5px"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/gradient_back" />


                <RelativeLayout
                    android:id="@+id/rlProfilePhoto"
                    android:layout_width="match_parent"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rlHeader">


                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/material_profile"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="50dp"
                        app:cardElevation="0dp"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/ellipse_6670_ek1" />

                    </com.google.android.material.card.MaterialCardView>


                    <TextView
                        android:id="@+id/textViewTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/material_profile"
                        android:text="New Year"
                        android:textSize="13sp"
                        android:textColor="#265F72" />

                    <TextView
                        android:layout_below="@+id/textViewTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/material_profile"
                        android:text="New Year"
                        android:textSize="10sp"
                        android:textColor="@color/purple_500" />
                </RelativeLayout>




                <RelativeLayout
                    android:id="@+id/layout_katha"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.70"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_toRightOf="@+id/material_profile"
                                android:text="Katha 1"
                                android:textSize="13sp"
                                android:textColor="#265F72" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@+id/material_profile"
                                android:text="2 hours 20 minutes"
                                android:textSize="10sp"
                                android:textColor="@color/purple_500" />
                        </LinearLayout>

                    </LinearLayout>


                    <TextView
                        android:id="@+id/txt_moreinfo"
                        android:layout_width="80dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"
                        android:paddingLeft="5dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toLeftOf="@+id/number"
                        android:background="@drawable/gradient_back"
                        android:gravity="center"
                        android:text="Open"
                        android:textColor="#fff"
                        android:textSize="10sp"
                        android:textStyle="bold" />


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/txt_moreinfo"
                        android:src="@drawable/lock_open"
                        app:tint="@color/black"
                        />


                </RelativeLayout>


            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>


    </LinearLayout>

</ScrollView>