<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:fillViewport="true"
    android:layout_height="match_parent"
    tools:context=".activities.HolidaysActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/imgtopheader">

        <RelativeLayout
            android:id="@+id/rel_backbtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/back_shape">

            <ImageView
                android:id="@+id/backbtn"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_baseline_arrow_back_24" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/rel_backbtn"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Holidays"
                android:textColor="#FE8226"
                android:textSize="20sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_nav"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/back_shape">


        <ImageView
            android:id="@+id/icMenu"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="8dp"
            android:src="@drawable/ic_baseline_menu_24"
            app:tint="@color/white" />
        </RelativeLayout>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="55dp"
            android:layout_toStartOf="@+id/cardViewProfile"
            android:padding="12dp"
            android:src="@drawable/notification"
            app:tint="@color/white" />


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardViewProfile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/rl_nav"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="8dp">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/ellipse_6670_ek1" />


        </com.google.android.material.card.MaterialCardView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4">


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardViewbackbtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            app:cardCornerRadius="25dp"
            app:cardElevation="8dp">


            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"

                android:src="@drawable/backbtn" />


        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/cardViewbackbtn"
            android:text="January,2021"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/cardViewforwordbtn"
            android:src="@drawable/search" />


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardViewforwordbtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="8dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/forverdbtn" />


        </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardViewcolor"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#F4E6F0"
                app:cardCornerRadius="25dp"
                app:cardElevation="8dp">


            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/txt_newyear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/cardViewcolor"
                android:text="New Year"
                android:textColor="#265F72" />

            <TextView
                android:id="@+id/txt_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_newyear"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="13sp"
                android:layout_toRightOf="@+id/cardViewcolor"
                android:text="States: All"
                android:textColor="#000" />

            <ImageView
                android:id="@+id/lock"
                android:visibility="gone"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@+id/txt_newyear"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/txt_religion"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/lock_open" />


            <TextView
                android:id="@+id/txt_moreinfo"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:drawableLeft="@drawable/ic_share"
                android:layout_centerVertical="true"
                android:paddingLeft="5dp"
                android:layout_below="@+id/txt_newyear"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/number"
                android:background="@drawable/gradient_back"
                android:gravity="center"
                android:text="Share"
                android:textColor="#fff"
                android:textSize="10sp"
                android:textStyle="bold" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/number"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:backgroundTint="#FFF8F4"
                app:cardCornerRadius="25dp"
                app:cardElevation="8dp">


                <TextView
                    android:layout_width="30dp"
                    android:layout_height="20sp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="1"
                    android:textColor="#FF6C43"
                    android:textSize="17sp"
                    android:textStyle="bold" />


            </com.google.android.material.card.MaterialCardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/txt_moreinfo"
                android:layout_below="@+id/number"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:text="Share"
                android:textColor="#F18C8E"
                android:textSize="10sp"
                />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@color/grey" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardViewcolor1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#FFF5E5"
                app:cardCornerRadius="25dp"
                app:cardElevation="8dp">


            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/txt_newyear1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/cardViewcolor1"
                android:text="Lohri"
                android:textColor="#265F72" />

            <TextView
                android:id="@+id/txt_state1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_newyear1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="13sp"
                android:layout_toRightOf="@+id/cardViewcolor1"
                android:text="States: All"
                android:textColor="#000" />


            <TextView
                android:id="@+id/txt_moreinfo1"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:drawableLeft="@drawable/ic_share"
                android:layout_centerVertical="true"
                android:paddingLeft="5dp"
                android:layout_below="@+id/txt_newyear1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/number1"
                android:background="@drawable/gradient_back"
                android:gravity="center"
                android:text="Share"
                android:textColor="#fff"
                android:textSize="10sp"
                android:textStyle="bold" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/number1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:backgroundTint="#FFF8F4"
                app:cardCornerRadius="25dp"
                app:cardElevation="8dp">


                <TextView
                    android:layout_width="30dp"
                    android:layout_height="20sp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="13"
                    android:textColor="#FF6C43"
                    android:textSize="17sp"
                    android:textStyle="bold" />


            </com.google.android.material.card.MaterialCardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/txt_moreinfo1"
                android:layout_below="@+id/number1"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:text="Wednessday"
                android:textColor="#F18C8E"
                android:textSize="10sp"
                />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@color/grey" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardViewcolor2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#EAF9FE"
                app:cardCornerRadius="25dp"
                app:cardElevation="8dp">

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/txt_newyear2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/cardViewcolor2"
                android:text="Makarsankranti"
                android:textColor="#265F72" />

            <TextView
                android:id="@+id/txt_state2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_newyear2"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="13sp"
                android:layout_toRightOf="@+id/cardViewcolor2"
                android:text="States: All"
                android:textColor="#000" />


            <TextView
                android:id="@+id/txt_share"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:drawableLeft="@drawable/ic_share"
                android:layout_centerVertical="true"
                android:paddingLeft="5dp"
                android:layout_below="@+id/txt_newyear2"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/number2"
                android:background="@drawable/gradient_back"
                android:gravity="center"
                android:text="Share"
                android:textColor="#fff"
                android:textSize="10sp"
                android:textStyle="bold" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/number2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:backgroundTint="#FFF8F4"
                app:cardCornerRadius="25dp"
                app:cardElevation="8dp">


                <TextView
                    android:layout_width="30dp"
                    android:layout_height="20sp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="14"
                    android:textColor="#FF6C43"
                    android:textSize="17sp"
                    android:textStyle="bold" />


            </com.google.android.material.card.MaterialCardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/txt_moreinfo2"
                android:layout_below="@+id/number2"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:text="Thursday"
                android:textColor="#F18C8E"
                android:textSize="10sp"
                />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@color/grey" />


    </LinearLayout>

</ScrollView>